{
  "name": "@pooflabs/vibe-check",
  "version": "0.1.0",
  "description": "AI agent evaluation framework for Claude and beyond",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vibe-check": "./dist/bin/vibe-check.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./judges": {
      "types": "./dist/judges/index.d.ts",
      "import": "./dist/judges/index.js",
      "default": "./dist/judges/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run tsup",
    "dev": "bun run tsup --watch",
    "typecheck": "bun run tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ai",
    "agent",
    "evaluation",
    "testing",
    "claude",
    "anthropic",
    "llm"
  ],
  "author": "Poof Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pooflabs/vibe-check"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "glob": "^11.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.30.0",
    "@anthropic-ai/claude-agent-sdk": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@anthropic-ai/claude-agent-sdk": {
      "optional": true
    }
  }
}
